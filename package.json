{
  "name": "hot-accept-webpack-plugin",
  "version": "1.1.2",
  "description": "Adds HMR accepting code to need modules",
  "author": {
    "name": "Artem Batura",
    "email": "artemir.q@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/artemirq/hot-accept-webpack-plugin"
  },
  "bugs": {
    "url": "https://github.com/artemirq/hot-accept-webpack-plugin/issues"
  },
  "license": "MIT",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "compile": "tsc -b .",
    "clean": "tsc -b . --clean",
    "prepublishOnly": "run-s clean compile",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "modify-source-webpack-plugin": "1.0.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-formatter-pretty": "3.0.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-import-helpers": "1.0.2",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "lint-staged": "10.2.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "typescript": "3.9.3",
    "@types/webpack": "4.41.13",
    "@types/node": "14.0.4"
  },
  "peerDependencies": {
    "webpack": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "webpack": {
      "optional": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --format=pretty --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "webpack",
    "plugin",
    "hmr",
    "hot",
    "accept"
  ]
}
